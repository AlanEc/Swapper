{% extends "SwapPlatformBundle::layout.html.twig" %}

{% block body %}
<div class="row">
    <div class="col-xs-offset-1 col-xs-10">
        <div class="panel panel-default">
            <h1>Reservation</h1>

            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th>Datedeparture</th>
                        <td>{% if reservation.dateDeparture %}{{ reservation.dateDeparture|date('Y-m-d') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Datearrival</th>
                        <td>{% if reservation.dateArrival %}{{ reservation.dateArrival|date('Y-m-d') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Totalswappoints</th>
                        <td>{{ reservation.totalSwapPoints }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ reservation.status }}</td>
                    </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('reservation_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}
